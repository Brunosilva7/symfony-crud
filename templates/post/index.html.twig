{% extends ('base.html.twig') %}

{# main twig file #}
{% block body %}

{# templates/base.html.twig #}

{% for message in app.flashes('success') %}
     {{success}}
{% endfor %}
<h2>List of all titles:</h2>

    <table id="example" class="table table-striped table-bordered" style="width:100%">

    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
        {% for post in posts %}
      <tr>
        <td
        {# data-field="idTitle" #}
        >{{post.id}}</td>
        <td>
            <a style="color:black;text-decoration:none;" href="{{path('post.show', {id: post.id})}}">
                {{post.title}}
            </a>
        </td>
        <td>

            <button
            type="button"
            id="delete-posts"
            class="btn btn-primary"
            {# data-idTitle ="<%= idTitle =%>" #}
            >
            <a style="color:white;text-decoration:none;" href="{{path('post.delete', {id: post.id})}}">
                Delete
            </a>
            </button>
        </td>

      </tr>
    {% endfor %}
    </tbody>
    </table>

{% endblock %}
